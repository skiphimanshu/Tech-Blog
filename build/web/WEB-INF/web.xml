<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServ</servlet-name>
        <servlet-class>com.tech.blog.servlets.RegisterServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServ</servlet-name>
        <servlet-class>com.tech.blog.servlets.LoginServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServ</servlet-name>
        <servlet-class>com.tech.blog.servlets.LogoutServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProfSev</servlet-name>
        <servlet-class>com.tech.blog.servlets.EditProfSev</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPostServ</servlet-name>
        <servlet-class>com.tech.blog.servlets.AddPostServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServ</servlet-name>
        <url-pattern>/RegisterServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServ</servlet-name>
        <url-pattern>/LoginServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServ</servlet-name>
        <url-pattern>/LogoutServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProfSev</servlet-name>
        <url-pattern>/EditProfSev</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPostServ</servlet-name>
        <url-pattern>/AddPostServ</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
